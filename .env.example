# S-RAG Configuration

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Model
DEFAULT_MODEL=gpt-4o

# Database Configuration
DATABASE_PATH=./data/databases/srag.db

# Ingestion Configuration
SCHEMA_ITERATIONS=4
SAMPLE_DOCUMENTS=12
SAMPLE_QUESTIONS=10
BATCH_SIZE=10

# Inference Configuration
MAX_TOKENS=4096
TEMPERATURE=0.7

# API Configuration
API_PORT=3000
API_HOST=localhost

# Logging
LOG_LEVEL=info

# Evaluation
ENABLE_EVALUATION=true
